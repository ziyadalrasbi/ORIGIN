# Auto detect text files and perform LF normalization
* text=auto

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Shell scripts
*.sh text eol=lf

# Python
*.py text eol=lf
*.pyw text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose.yml text eol=lf
.dockerignore text eol=lf

# Config files
*.ini text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
.env text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

